                            <a href="~/Cart">
                                <span class="num">@ViewBag.cart_size</span>
                                <ion-icon name="cart-outline"></ion-icon>
                                <span>Giỏ hàng</span>
                            </a>
                        </li>
                    }
                <li class="item">
                    <a href="#">
