                            <span>Tài khoản</span>
                        }
                    </a>
                    <div class="ol-el dnone">
                        <ol>
                            @if (Session["User"] != null)
                            {
                                TAI_KHOAN Ac = (TAI_KHOAN)Session["User"];
                                if (Ac.QUYEN_HAN != "admin")
                                {
                                    <li>
                                        <a href="~/Profile">
                                            <img src="~/Content/img/sys/profile.png" alt="" />
