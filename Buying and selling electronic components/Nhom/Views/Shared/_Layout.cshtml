                        {
                            if (ViewBag.avt != null)
                            {
                                <img src="~/Content/img/avt/@ViewBag.avt" style="border-radius: 50%" width="24" height="24" />
                            }
                            else
                            {
                                <ion-icon name="person"></ion-icon>
                            }
